<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.testingapp.MainActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            style="@style/imageViewStyle"
            android:src="@drawable/brasovgif3"
            android:id="@+id/gif_image"
            />
        <ImageView
            style="@style/imageViewStyle"
            android:src="@drawable/gradient_cc_opacity_pruple_red"
            />

        <ImageView
            style="@style/imageViewStyle"
            android:src="@drawable/overlay2"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/titleMarginBottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brasov"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/titleSize"
                android:textAllCaps="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience"
                android:textColor="@color/titleColor"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_thin_italic"
                android:textSize="@dimen/titleSize"
                android:textAllCaps="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/playButtonSize"
            android:layout_height="@dimen/playButtonSize"
            android:src="@drawable/play"
            android:id="@+id/play"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/routesImageSize"
        android:layout_height="@dimen/routesImageSize"
        android:src="@drawable/logo"
        android:id="@+id/route"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/routesMarginBottom"
        />
</RelativeLayout>
