<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/cardViewPadding"
    android:clipToPadding="false"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        card_view:cardCornerRadius="@dimen/cardViewRadius"
        card_view:cardElevation="@dimen/cardViewElevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_cc_opacity_pruple_red"
            android:id="@+id/card_gradient_background"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/nullSize"
                android:layout_weight="4"
                android:scaleType="centerCrop"
                android:id="@+id/placeImage"
                />
            <TextView
                android:id="@+id/placeText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nullSize"
                android:layout_weight="2"
                android:padding="@dimen/cardViewTextPadding"
                android:fontFamily="@font/roboto_medium"
                android:textAllCaps="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nullSize"
                android:layout_weight="2"
                android:paddingLeft="@dimen/cardViewTextPadding"
                android:paddingRight="@dimen/cardViewTextPadding"
                android:ellipsize="end"
                android:id="@+id/placeDesc"
                android:fontFamily="@font/roboto_regular"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorIconsText"
                android:layout_marginBottom="@dimen/cardViewFooterPadding"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/welcoming_footer"
                android:layout_marginBottom="@dimen/cardViewTextPadding"
                android:layout_marginTop="@dimen/cardViewFooterPadding"
                android:gravity="end"
                >
                <ImageView
                    style="@style/welcomeIcons"
                    android:src="@drawable/share"
                    />
                <ImageView
                    style="@style/welcomeIcons"
                    android:src="@drawable/heart"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/cardViewFooterPadding"
                android:layout_marginBottom="@dimen/cardViewFooterPadding"
                android:id="@+id/ratingBarLayout">
                <RatingBar
                android:id="@+id/ratingBarSmall"
                style="?attr/ratingBarStyleSmall"
                android:theme="@style/RatingBarReside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                    />
                <TextView
                    android:layout_width="@dimen/nullSize"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/learn_more"
                    android:gravity="end"
                    android:layout_marginBottom="@dimen/cardViewFooterTextMargin"
                    android:textColor="@color/titleColor"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/type_text_size"
                    android:textAllCaps="true"
                    android:id="@+id/learn_more"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>